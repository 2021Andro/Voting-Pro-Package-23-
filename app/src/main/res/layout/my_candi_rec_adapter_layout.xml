<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_CAT_LIST"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:contentPadding="2dp"
    android:layout_margin="15dp"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_VB"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName_VB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profile_image_VB"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:text="Candidate Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvStatus_VB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/candidate_status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/tvName_VB"
            android:layout_toEndOf="@+id/profile_image_VB"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20sp"
            />

        <TextView
            android:id="@+id/tvCriticsRating_VB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Critics Rating"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/profile_image_VB"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            />


        <RatingBar
            android:id="@+id/rbCriticsRating_VB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCriticsRating_VB"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/app_name"
            android:isIndicator="true"
            android:paddingStart="5sp"
            android:stepSize="0.5" />

        <View
            android:id="@+id/divider1"
            android:layout_width="130dp"
            android:layout_height="2dp"
            android:layout_toLeftOf="@id/tvTodayLabel_VB"
            android:layout_below="@id/rbCriticsRating_VB"
            android:layout_marginRight="20dp"
            android:layout_marginTop="22dp"
            android:background="@color/primary_text_color" />


        <View
            android:id="@+id/divider2"
            android:layout_width="130dp"
            android:layout_height="2dp"
            android:layout_toRightOf="@id/tvTodayLabel_VB"
            android:layout_below="@id/rbCriticsRating_VB"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:background="@color/primary_text_color" />


        <TextView
            android:id="@+id/tvTodayLabel_VB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rbCriticsRating_VB"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Voting"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTodaySubjectLabel_VB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today Subject"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/tvTodayLabel_VB"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tvTodaySubject_VB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTodaySubjectLabel_VB"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Subject"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvVotingMassageFromUser_VB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTodaySubject_VB"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Your already vote submitted"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="gone"/>


        <LinearLayout
            android:id="@+id/voting_button_layout_VB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_below="@id/tvTodaySubject_VB">

            <ImageView
                android:id="@+id/ivLike_VB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_like_before_vote" />

            <TextView
                android:id="@+id/tvLike_VB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_1"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/ivNeutral_VB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:focusable="true"
                app:srcCompat="@drawable/ic_neutral_before_vote"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tvNeutral_VB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_2"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/ivDislike_VB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:focusable="true"
                app:srcCompat="@drawable/ic_dislike_before_vote"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tvDislike_VB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_3"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                />
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>