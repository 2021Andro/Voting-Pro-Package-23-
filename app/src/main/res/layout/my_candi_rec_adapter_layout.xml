<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_CAT_LIST"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:contentPadding="2dp"
    android:layout_margin="15dp"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivProfile_CAT_LIST"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/tvName_CAT_LIST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="Name Sirname"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStatus_CAT_LIST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="Status"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivArrowDown_CAT_LIST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/ic_arrow_down_24" />


        <LinearLayout
            android:id="@+id/laShowDeal_CAT_LIST"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivArrowUp_CAT_LIST"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/ic_arrow_up_24"
                />


            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerColor="@color/primary_text_color"
                app:dividerInsetEnd="16dp"
                app:dividerInsetStart="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20dp"
                android:text="Critics Give Star"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvShowStarRating_CAT_LIST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10dp"
                android:text="3.0"
                android:textSize="18sp" />

            <RatingBar
                android:id="@+id/ratingBar1_CAT_LIST"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="@string/app_name"
                android:isIndicator="true"
                android:paddingStart="5dp"
                android:stepSize="0.5" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:dividerColor="@color/primary_text_color"
                app:dividerInsetEnd="16dp"
                app:dividerInsetStart="16dp" />
            <Button
                android:id="@+id/btnGoToVote_CAT_LIST"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_margin="15dp"
                android:text="@string/going_vote" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>